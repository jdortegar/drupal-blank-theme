{% include directory ~ '/partials/header.html.twig'%}

<div class="container-fluid mobile-padding-0">
	<div class="wrapper mobile-padding-0">

		<main role="main">

			<section class="section-wrapper section-servicios-1 servicios-section " id="energia">
				<div class="header">
					<img src="/themes/custom/gftheme/images/icon-energia.png" alt="Energia" class="img-fluid"/>
					{% if language.getId() == 'en' %}
						<h4>Energy</h4>
						<p>We search for sustainable solutions to provide a more competitive energy.</p>
					{% elseif language.getId() == 'es' %}
						<h4>Energía</h4>
						<p>Buscamos soluciones sostenibles para proporcionar energía más competitiva.</p>
					{% endif %}
				</div>
				<div class="content row align-items-center justify-content-center">
					<div class="circle-container justify-content-center">
						{% if language.getId() == 'en' %}
							<div class="circle">We analyze<br>TRENDS IN THE ENERGY SECTOR</div>
						{% elseif language.getId() == 'es' %}
							<div class="circle">Analizamos<br>TENDENCIAS
								<br>DEL SECTOR
								<br>ENERGÉTICO
							</div>
						{% endif %}
					</div>
					<div class="circle-container">
						{% if language.getId() == 'en' %}
							<div class="circle">Focused on<br>
								SUSTAINABLE ENERGIES
							</div>
						{% elseif language.getId() == 'es' %}
							<div class="circle">Focalizados en<br>
								ENERGÍAS<br>
								SUSTENTABLES</div>
						{% endif %}
					</div>
					<div class="circle-container">
						{% if language.getId() == 'en' %}
							<div class="circle">We search for<br>
								RENEWABLE ENERGIES</div>
						{% elseif language.getId() == 'es' %}
							<div class="circle">Buscamos<br>
								ENERGÍAS<br>
								RENOVABLES</div>
						{% endif %}
					</div>
					<div class="circle-container">
						{% if language.getId() == 'en' %}
							<div class="circle">Bases on<br>
								SAFE AND<br>RELIABLE<br>SOURCES</div>
						{% elseif language.getId() == 'es' %}
							<div class="circle">A partir de<br>
								FUENTES<br>
								SEGURAS Y<br>
								CONFIABLES</div>
						{% endif %}
					</div>
					<div class="circle-container">
						{% if language.getId() == 'en' %}
							<div class="circle">We propose<br>
								INVESTMENT PROJECTS AND BUSINESS OPPORTUNITIES</div>
						{% elseif language.getId() == 'es' %}
							<div class="circle">Proponemos<br>
								PROYECTOS DE<br>
								INVERSIÓN Y<br>
								OPORTUNIDADES<br>
								DE NEGOCIO</div>
						{% endif %}
					</div>
				</div>
			</section>
			<!-- Section -->
			<section class="section-wrapper section-servicios-2 servicios-section scroll-animation" id="agro">
				<div class="header">
					<img src="/themes/custom/gftheme/images/icon-agro.png" alt="Energia" class="img-fluid"/>
					<h4>
						{% if language.getId() == 'en' %}
							AGRIBUSINESS
						{% elseif language.getId() == 'es' %}
							AGRONEGOCIOS
						{% endif %}
					</h4>
					<p class="desktop-version">
						{% if language.getId() == 'en' %}
							We design investment strategies based on both short and long-term projected trends and factors.
						{% elseif language.getId() == 'es' %}
							Diseñamos estrategias de inversión en base a los factores<br>y tendencias proyectadas a corto y largo plazo.
						{% endif %}
					</p>
					<p class="mobile-version">
						{% if language.getId() == 'en' %}
							We analyze the perspectives of agriculture and its components.
						{% elseif language.getId() == 'es' %}
							Analizamos las perspectivas de la agricultura y sus componentes.
						{% endif %}
					</p>
				</div>
				<div class="content row align-items-center justify-content-center desktop-version">
					<div class="left">
						<h6>
							{% if language.getId() == 'en' %}
								FACTORS
							{% elseif language.getId() == 'es' %}
								FACTORES
							{% endif %}
						</h6>
						<ul>
							{% if language.getId() == 'en' %}
								<li>Increase in world population.</li>
								<li>Business liberalization and biofuels demand.</li>
								<li>Increase in people’s income in emerging countries.</li>
							{% elseif language.getId() == 'es' %}
								<li>Aumento de la población mundial.</li>
								<li>Liberalización comercial y demanda de biocombustibles.</li>
								<li>Incremento de los ingresos de los habitantes de países emergentes.</li>
							{% endif %}
						</ul>
					</div>
					<div class="right">
						<h6>
							{% if language.getId() == 'en' %}
								Trends
							{% elseif language.getId() == 'es' %}
								Tendencias
							{% endif %}
						</h6>
						<ul>
							{% if language.getId() == 'en' %}
								<li>Scenario of favorable prices for the sector.</li>
								<li>Change in people’s eating patterns.</li>
								<li>Conversion of primary products into semi-processed assets.</li>
							{% elseif language.getId() == 'es' %}
								<li>Escenario de precios favorables para el sector.</li>
								<li>Cambio en los patrones de alimentación de la población.</li>
								<li>Conversión de productos primarios en bienes semi-procesados.</li>
							{% endif %}
						</ul>
					</div>
				</div>
				<div class="content align-items-center justify-content-center mobile-version">
					<div class="mobile-servicio-box">
						<h6>
							{% if language.getId() == 'en' %}
								FACTORS
							{% elseif language.getId() == 'es' %}
								FACTORES
							{% endif %}
						</h6>
						<ul>
							{% if language.getId() == 'en' %}
								<li>Increase in world population.</li>
								<li>Business liberalization and biofuels demand.</li>
								<li>Increase in people’s income in emerging countries.</li>
							{% elseif language.getId() == 'es' %}
								<li>Aumento de la población mundial.</li>
								<li>Demanda de biocombustibles.</li>
								<li>Incremento de los ingresos de los habitantes de países emergentes.</li>
							{% endif %}
						</ul>
					</div>
					<div class="mobile-servicio-box">
						<h6>
							{% if language.getId() == 'en' %}
								Trends
							{% elseif language.getId() == 'es' %}
								Tendencias
							{% endif %}
						</h6>
						<ul>
							{% if language.getId() == 'en' %}
								<li>Change in people’s eating patterns.</li>
								<li>Conversion of primary products into semi-processed assets.</li>
							{% elseif language.getId() == 'es' %}
								<li>Cambio en los patrones de alimentación de la población.</li>
								<li>Conversión de productos primarios en bienes semi-procesados.</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</section>
			<!-- Section -->
			<!-- Section -->
			<section class="section-wrapper section-servicios-3 servicios-section scroll-animation" id="medio">
				<div class="header">
					<img src="/themes/custom/gftheme/images/icon-medio.png" alt="Energia" class="img-fluid"/>
					<h4>
						{% if language.getId() == 'en' %}
							ENVIRONMENT
						{% elseif language.getId() == 'es' %}
							MEDIO AMBIENTE
						{% endif %}
					</h4>
					<p>
						{% if language.getId() == 'en' %}
							We combine our concern for the environment with our entrepreneurial ability in the business
																																																																																																																																																																	world.
						{% elseif language.getId() == 'es' %}
							Combinamos nuestra preocupación por el medio ambiente con nuestra capacidad emprendedora en el mundo de los negocios.
						{% endif %}
					</p>
				</div>
				<div class="content row align-items-center justify-content-center">
					<div class="col">
						<div class="content">
							<div class="number">1</div>
							<div class="text">
								{% if language.getId() == 'en' %}
									We take care of the environment.
								{% elseif language.getId() == 'es' %}
									Nos ocupamos de cuidar el medio ambiente.
								{% endif %}
							</div>
						</div>
					</div>
					<div class="col">
						<div class="content">
							<div class="number">2</div>
							<div class="text">
								{% if language.getId() == 'en' %}
									We have an active participation in carbon markets.
								{% elseif language.getId() == 'es' %}
									Participamos activamente en los mercados de carbono.
								{% endif %}
							</div>
						</div>
					</div>
					<div class="col">
						<div class="content">
							<div class="number">3</div>
							<div class="text">
								{% if language.getId() == 'en' %}
									We synchronize corporate core business with the environmental factor.
								{% elseif language.getId() == 'es' %}
									Sincronizamos core business empresarial con el factor medioambiental.
								{% endif %}
							</div>
						</div>
					</div>
					<div class="col">
						<div class="content">
							<div class="number">4</div>
							<div class="text">
								{% if language.getId() == 'en' %}
									We adapt our operation to global structures.
								{% elseif language.getId() == 'es' %}
									Adaptamos nuestras operaciones a los esquemas globales.
								{% endif %}
							</div>
						</div>
					</div>

				</div>
			</section>
